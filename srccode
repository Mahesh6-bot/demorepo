<body>
  <div class="container">
    <img src="https://upload.wikimedia.org/wikipedia/en/6/60/Jurassic_World_Dominion_poster.jpg" alt="Movie Poster">
    <h2>Jurassic World</h2>
    <label for="time">Choose Showtime:</label>
    <select id="time">
      <option value="150">10:00 AM - Rs.150</option>
      <option value="200">1:00 PM - Rs.200</option>
      <option value="250">6:00 PM - Rs.250</option>
    </select>

    <label for="tickets">Number of Tickets:</label>
    <input type="number" id="tickets" value="1" min="1">

    <button onclick="bookTickets()">Book Now</button>
    <div class="result" id="result"></div>
  </div>

  <script>
    function bookTickets() {
      const ticketPrice = document.getElementById("time").value;
      const numTickets = document.getElementById("tickets").value;
      const total = ticketPrice * numTickets;
      
      document.getElementById("result").innerText = `âœ… You booked ${numTickets} ticket(s). Total: Rs.${total}`;
    }
  </script>
